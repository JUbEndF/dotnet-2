<Window x:Class="TaskListWpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskListWpfClient"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="560" MinWidth="500" Height="436" Width="302">

    <Window.Resources>

    </Window.Resources>
    <Grid Background="Beige">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="87*"/>
        </Grid.ColumnDefinitions>
        <ListBox MinWidth="240" ItemsSource="{Binding Tasks}" Background="GreenYellow" Margin="0,100,260,0" Grid.ColumnSpan="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" Name="Task_name"/>
                            <ColumnDefinition Width="120" Name="Executor"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding NameTask}" Grid.Column="0" TextBlock.Foreground="Black"/>
                        <TextBlock Text="{Binding Executor.Surname}" Grid.Column="1" TextBlock.Foreground="Black"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Delete" Margin="0,10,165,0" Click="Delete_Click" Grid.Column="1" HorizontalAlignment="Right" Width="85" Height="40" VerticalAlignment="Top"/>
        <Button Content="Create" Margin="0,55,165,0" Click="Create_Click" Grid.Column="1" HorizontalAlignment="Right" Width="85" Height="40" VerticalAlignment="Top"/>
        <Button Content="Update List" Margin="0,100,165,0" Click="Update_Click" Grid.Column="1" HorizontalAlignment="Right" Width="85" Height="40" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Right" Margin="0,10,5,0" Width="141" SelectionChanged="ComboBox_SelectionChanged" Grid.Column="1" Height="40" VerticalAlignment="Top"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Right" Margin="0,55,5,0" Width="141" Height="40" VerticalAlignment="Top" ItemsSource="{Binding Emploees}"/>
    </Grid>
</Window>
