<Window x:Class="TaskListWpfClient.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskListWpfClient"
        mc:Ignorable="d"
        Title="Connection" MinHeight="140" MinWidth="292"
        Height="140" Width="292"
        Background="Beige">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="189*"/>
            <ColumnDefinition Width="103*"/>
        </Grid.ColumnDefinitions>
        <Label 
            Content="Connection address:" 
            Height="30" Margin="10,10,13,0" 
            VerticalAlignment="Top"/>
        <TextBox 
            TextWrapping="Wrap" 
            Text="{Binding ConnectionAddress}" 
            Margin="10,45,50,0" 
            Height="24" 
            VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button 
            Content="Ok" 
            Command="{Binding OkCommand}" 
            Height="20" 
            Margin="117,94,12,0" 
            VerticalAlignment="Top"/>
        <Button 
            Content="cancel" 
            Command="{Binding CancelCommand}" 
            Height="20" 
            Margin="10,94,28,0" 
            VerticalAlignment="Top" Grid.Column="1"/>

    </Grid>
</Window>
